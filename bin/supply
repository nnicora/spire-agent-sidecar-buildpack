#!/bin/bash

set -e

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4

echo "Supply script called with parameters $@"

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`

echo "-----> Running SPIRE Agent sidecar supply"

LOC="$DEPS_DIR/$DEPS_IDX"
echo '---
processes:
- type: "sidecar_process"
  command: "$LOC/spire-agent run -config agent.conf"
  limits:
    memory: 100
  platforms:
    cloudfoundry:
      sidecar_for: [ "web"]
' > "$LOC"/launch.yml

mv "$BUILDPACK_DIR"/spire-agent "$LOC"

echo "-----> Wrote sidecar config to $DEPS_DIR/$DEPS_IDX/launch.yml"